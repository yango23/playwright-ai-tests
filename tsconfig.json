{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@ui/*": ["tests/UI/*"],
      "@api/*": ["tests/api/*"]
    }
  },
  "include": ["pages", "tests", "playwright.config.ts"]
}
